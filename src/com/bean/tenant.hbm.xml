<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name="com.bean.Tenant" table="tenant">
      <meta attribute="class-description">
         This class contains the Tenant detail. 
      </meta>
      <id name="tenant_id" type="int" column="tenant_id">
         <generator class="native"/>
      </id>
        <property column="tenant_name" name="tenant_name" type="string" />
   </class>
</hibernate-mapping>